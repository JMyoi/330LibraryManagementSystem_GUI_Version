<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="CreateAnchor" prefHeight="700.0" prefWidth="700.0" stylesheets="CreateAccountPage.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.librarymanagementsystem.CreateAccountPageController">
   <children>
      <Label layoutX="243.0" layoutY="109.0" prefHeight="77.0" prefWidth="249.0" text="Create an Account" textFill="WHITE">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Button fx:id="backBttn" layoutX="49.0" layoutY="39.0" mnemonicParsing="false" onAction="#back" prefHeight="52.0" prefWidth="102.0" text="Back">
         <font>
            <Font size="21.0" />
         </font></Button>
      <TextField fx:id="newUserName" layoutX="256.0" layoutY="214.0" prefHeight="47.0" prefWidth="209.0" promptText="User Name" />
      <TextField fx:id="newUserPass" layoutX="254.0" layoutY="296.0" prefHeight="46.0" prefWidth="212.0" promptText="Password" />
      <Label fx:id="nameTakenLabel" alignment="CENTER" layoutX="262.0" layoutY="178.0" prefHeight="17.0" prefWidth="200.0" textAlignment="CENTER" textFill="WHITE" />
      <Label fx:id="typeNotSelectedLabel" layoutX="318.0" layoutY="364.0" prefHeight="34.0" prefWidth="146.0" textFill="WHITE">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <RadioButton fx:id="memberBttn" layoutX="297.0" layoutY="381.0" mnemonicParsing="false" prefHeight="44.0" prefWidth="123.0" text="Member" textFill="WHITE">
         <toggleGroup>
            <ToggleGroup fx:id="typeRadioBttn" />
         </toggleGroup>
         <font>
            <Font size="20.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="LibrarianBttn" layoutX="298.0" layoutY="433.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="123.0" text="Librarian" textFill="WHITE" toggleGroup="$typeRadioBttn">
         <font>
            <Font size="20.0" />
         </font></RadioButton>
      <Button fx:id="createAccountBttn" layoutX="311.0" layoutY="493.0" mnemonicParsing="false" onAction="#addUser" prefHeight="43.0" prefWidth="88.0" text="Create">
         <font>
            <Font size="20.0" />
         </font></Button>
      <Label fx:id="usertype" layoutX="328.0" layoutY="340.0" prefHeight="34.0" prefWidth="84.0" text="User Type" textFill="WHITE">
         <font>
            <Font size="17.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
